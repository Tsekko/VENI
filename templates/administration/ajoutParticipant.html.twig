{% extends 'base.html.twig' %}

{% block title %}
    Ajout de participant
{% endblock %}

{% block body %}
    <h1 class="title">Ajouter un participant</h1>
    <div class="container">
        {{ form_start(monProfilForm) }}
        <div class="columns">
            <div class="column">
                <div class="columns">
                    <div class="column"></div>
                    <div class="column">
                        <div class="pt-2">{{ form_label(monProfilForm.pseudo) }}</div>
                        <div class="py-4">{{ form_label(monProfilForm.prenom) }}</div>
                        <div>{{ form_label(monProfilForm.nom) }}</div>
                        <div class="py-4">{{ form_label(monProfilForm.telephone) }}</div>
                        <div>{{ form_label(monProfilForm.mail) }}</div>
                        <div class="pt-2">{{ form_label(monProfilForm.administrateur) }}</div>
                        <div class="py-3">{{ form_label(monProfilForm.site) }}</div>
                        <div>{{ form_label(monProfilForm.password) }}</div>
                    </div>
                </div>
            </div>
            <div class="column">
                <div class="columns">
                    <div class="column">
                        <div>{{ form_widget(monProfilForm.pseudo, {'attr': {'class': 'input'}}) }}</div>
                        <div>{{ form_widget(monProfilForm.prenom, {'attr': {'class': 'input'}}) }}</div>
                        <div>{{ form_widget(monProfilForm.nom, {'attr': {'class': 'input'}}) }}</div>
                        <div>{{ form_widget(monProfilForm.telephone, {'attr': {'class': 'input'}}) }}</div>
                        <div>{{ form_widget(monProfilForm.mail, {'attr': {'class': 'input'}}) }}</div>
                        <div>{{ form_widget(monProfilForm.administrateur) }}</div>
                        <div class="select">{{ form_widget(monProfilForm.site) }}</div>
                        <div>{{ form_widget(monProfilForm.password, {'attr': {'class': 'input'}}) }}</div>
                    </div>
                    <div class="column"></div>
                </div>
            </div>
        </div>
        <div class="form-buttons">
            <button type="submit" class="button is-success">Enregistrer</button>
            <a href="{{ path('app_home') }}" class="button">Annuler</a>
        </div>
        {{ form_end(monProfilForm) }}
    </div>
{% endblock %}